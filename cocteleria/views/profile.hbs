{{> header usuario}}

<div class="card mb-3" style="width: 100vw; height: 30vh">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{user.fotoPerfil}}" class="img-fluid rounded-start" alt="Avatar usuario" name="perfil-cover-image" style="height: 30vh" >
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">{{user.username}}</h3>
                <p class="card-text">{{user.descripcion}}</p>
               
            </div>
        </div>
    </div>
</div>

<div class="container text-center">
    <div class="row">
        {{#each coctelUser}}
        <div class="col-3 m-1" style="background-color: rgba(223, 223, 222, 0.5)">
            <img src="{{imageUrl}}" class="card-img-top" alt="Imagen del cóctel">
            <div class="card-body">
                <h5 class="card-title"> {{name}}</h5>
                <a href="informacion/{{_id}}" class="btn btn-primary">Más información</a>



                {{!-- començém a treballar --}}
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Eliminar
                </button>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">¿Está seguro?</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Los cócteles eliminados no podrá recuperarlos
                            </div>
                            <div class="modal-footer">
                                <form action="/delete/{{_id}}" method="post">
                                    <button type="submit" class="btn btn-primary">Eliminar definitivamente</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- --}}
            </div>
        </div>


        {{/each}}

    </div>
</div>




